<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_details">

        <style>
            .report_border {
            border: 1px solid black;
            }
            .none_border {
            border: none;
            border-top: none;
            }
            .report_border > thead > tr > th,
            .report_border > tbody > tr > th,
            .report_border > thead > tr > td,
            .report_border > tbody > tr > td {
            border: 1px solid black !important;
            }
        </style>

        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <br t-call="web.external_layout">
                    <!-- custom style -->
                    <div class="page">

                        <div class="row">
                            <!-- add some additional information -->
                            <div class="oe_structure col-4 text-center text-nowrap ">
                                <!-- Printing MCIT Logo in property report -->
                                <img src="pms_real_estate/static/description/img/mcit_logo.png" height="130"
                                     width="150"/>
                            </div>

                            <div class="oe_structure col-4 text-center text-nowrap ">
                                <!-- Simple text printing -->
                                <p>د افغانستان اسلامي امارت</p>
                                <p>وزارت مخابرات و تکنالوجی معلوماتی</p>
                                <p>رياست اداری</p>
                                <p>مديرت عمومی املاک</p>
                            </div>

                            <div class="oe_structure col-4 text-center text-nowrap ">
                                <!-- Printing Emirates Logo in property report -->
                                <img src="pms_real_estate/static/description/img/Emirate_logo.png" height="130"
                                     width="150"/>
                            </div>
                        </div>
                        <!-- Heading Part -->
                        <div class="heading-part mt-5">
                            <table class="table none_border table-responsive">
                                <!-- getting values from real.estate model in QWEB-->
                                <tr class="text-end" style="background-color:lightblue">
                                    <td style="font-size:20px;">
                                        <span t-field="property.name"/>
                                    </td>
                                    <th style="width: 30%; font-size:18px;">اسم ملکيت</th>
                                </tr>
                            </table>
                            <!-- Add other heading elements as needed -->
                        </div>


                        <!-- Body Part -->

                        <!-- Table 1 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="6" class="fw-bold">معلومات ملکيت</th>
                                        <!-- Add other headers as needed -->
                                    </tr>

                                </thead>
                                <tbody>
                                    <!-- Table 1 body rows -->
                                    <tr class="text-end">
                                        <th>تعداد منازل</th>
                                        <th>تعداد اطاقها</th>
                                        <th>حالت فعلی</th>
                                        <th>نوع جايداد</th>
                                        <th>موقيعت</th>
                                        <th>مالک جایداد</th>
                                    </tr>

                                    <tr class="text-end">
                                        <td class="text-center">
                                            <span t-field="property.floors"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="property.bedrooms"/>
                                        </td>
                                        <td>
                                            <span t-field="property.current_status"/>
                                        </td>
                                        <td>
                                            <!-- this is for printing Many2one field  -->
                                            <!--                                            <span t-field="property.property_type_id.property_type"/>-->

                                            <!-- this is for printing property_type many2many field -->
                                            <t t-foreach="property.property_type" t-as="pro">
                                                <span t-field="pro.property_type"/>
                                                <!--                                                <p>,</p>-->
                                            </t>

                                        </td>
                                        <td>
                                            <span t-field="property.property_location"/>
                                        </td>
                                        <td>
                                            <span t-field="property.name"/>
                                        </td>
                                        <!-- Add other sub-headers as needed -->
                                    </tr>
                                </tbody>
                            </table>
                        </div>


                        <!-- Table 4 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="5 fw-bold">معلومات سند ملکيت</th>
                                        <!-- Add other headers as needed -->
                                    </tr>


                                </thead>
                                <tbody>
                                    <!-- Table 4 body rows -->
                                    <tr class="text-end">
                                        <th>ملاحظه</th>
                                        <th>Tag</th>
                                        <th>درجه و نوعيت زمين</th>
                                        <th>قيمت ملکيت</th>
                                        <th>نمبر قباله و یا سند ملکيت</th>
                                    </tr>

                                    <tr class="text-end">
                                        <td>
                                            <span t-field="property.description"/>
                                        </td>
                                        <td>
                                            <!-- this is for printing tags many2many field -->
                                            <t t-foreach="property.tag_ids" t-as="tag">
                                                <span t-field="tag.tag_name"/>
                                                <!--                                                <p>,</p>-->
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="property.grade_type_property"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="property.expected_price"/>
                                        </td>
                                        <td>
                                            <span t-field="property.deed_number"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Table 3 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="3 fw-bold">مساحت</th>
                                        <!-- Add other headers as needed -->
                                    </tr>


                                </thead>
                                <tbody>
                                    <!-- Table 3 body rows -->
                                    <tr class="text-end">
                                        <th>بسواسه</th>
                                        <th>بسوه</th>
                                        <th>جريب</th>
                                        <!-- Add other sub-headers as needed -->
                                    </tr>

                                    <tr class="text-center">
                                        <td>
                                            <span t-field="property.beswasa"/>
                                        </td>
                                        <td>
                                            <span t-field="property.beswa"/>
                                        </td>
                                        <td>
                                            <span t-field="property.gereb"/>
                                        </td>
                                        <!-- Add other sub-headers as needed -->
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Table 2 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>   <!-- <th rowspan="2">Header 1</th>-->
                                        <th colspan="4 fw-bold">حدود اربعه</th>
                                        <!-- Add other headers as needed -->
                                    </tr>

                                </thead>
                                <tbody>
                                    <!-- Table 2 body rows -->
                                    <tr class="text-end">
                                        <th>شمال</th>
                                        <th>جنوب</th>
                                        <th>شرق</th>
                                        <th>غرب</th>
                                    </tr>


                                    <tr class="text-end">
                                        <td>
                                            <span t-field="property.east"/>
                                        </td>
                                        <td>
                                            <span t-field="property.south"/>
                                        </td>
                                        <td>
                                            <span t-field="property.south"/>
                                        </td>
                                        <td>
                                            <span t-field="property.south"/>
                                        </td>
                                        <!-- Add other sub-headers as needed -->
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-6 mt-5">
                                <p class="text-center">امظاء</p>
                            </div>
                            <div class="col-6  mt-5" style="margin-left:30%;">
                                <p>ترتيب کننده</p>
                                <hr/>
                                <span t-field="user.name"/>
                            </div>
                        </div>

                    </div>
                </br>
            </t>
        </t>
    </template>
</odoo>
