<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_details">

        <style>
            .report_border {
            border: 1px solid black;
            }
            .none_border {
            border: none;
            border-top: none;
            }
            .report_border > thead > tr > th,
            .report_border > tbody > tr > th,
            .report_border > thead > tr > td,
            .report_border > tbody > tr > td {
            border: 1px solid black !important;
            }
        </style>

        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <br t-call="web.external_layout">
                    <!-- custom style -->
                    <div class="page">

                        <div class="row">
                            <!-- add some additional information -->
                            <div class="oe_structure col-4 text-center text-nowrap ">
                                <!-- Printing MCIT Logo in property report -->
                                <img src="pms_real_estate/static/description/img/mcit_logo.png" height="130"
                                     width="150"/>
                            </div>

                            <div class="oe_structure col-4 text-center text-nowrap ">
                                 <!-- Simple text printing -->
                                    <p>Islamic Emirate of Afghanistan</p>
                                    <p>Ministry of Communications and IT</p>
                                    <p>Head of Administration</p>
                                    <p>General Property Management</p>
                            </div>

                            <div class="oe_structure col-4 text-center text-nowrap ">
                                <!-- Printing Emirates Logo in property report -->
                                <img src="pms_real_estate/static/description/img/Emirate_logo.png" height="130"
                                     width="150"/>
                            </div>
                        </div>
                        <!-- Heading Part -->
                        <div class="heading-part mt-5">
                            <table class="table none_border table-responsive">
                                <!-- getting values from real.estate model in QWEB-->
                                <tr class="text-end" style="background-color:lightblue">
                                    <td style="font-size:20px;">
                                        <span t-field="property.name"/>
                                    </td>
                                    <th style="width: 30%; font-size:18px;">Property name</th>
                                </tr>
                            </table>
                        </div>


                        <!-- Body Part -->

                        <!-- Table 1 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="6" class="fw-bold">Property information</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    <!-- Table 1 body rows -->
                                    <tr class="text-end">
                                        <th>Floors</th>
                                        <th>Rooms</th>
                                        <th>Current state</th>
                                        <th>Type of property</th>
                                        <th>Location</th>
                                        <th>Property Owner</th>
                                    </tr>

                                    <tr class="text-end">
                                        <td class="text-center">
                                            <span t-field="property.floors"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="property.bedrooms"/>
                                        </td>
                                        <td>
                                            <span t-field="property.current_status"/>
                                        </td>
                                        <td>

                                            <t t-foreach="property.property_type" t-as="pro">
                                                <span t-field="pro.property_type"/>
                                            </t>

                                        </td>
                                        <td>
                                            <span t-field="property.property_location"/>
                                        </td>
                                        <td>
                                            <span t-field="property.name"/>
                                        </td>
                                        <!-- Add other sub-headers as needed -->
                                    </tr>
                                </tbody>
                            </table>
                        </div>


                        <!-- Table 4 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="5 fw-bold">Property Document information</th>
                                        <!-- Add other headers as needed -->
                                    </tr>


                                </thead>
                                <tbody>
                                    <!-- Table 4 body rows -->
                                    <tr class="text-end">
                                        <th>Description</th>
                                        <th>Tag</th>
                                        <th>Grade and type of land</th>
                                        <th>property price</th>
                                        <th>Deed or title deed number</th>
                                    </tr>

                                    <tr class="text-end">
                                        <td>
                                            <span t-field="property.description"/>
                                        </td>
                                        <td>
                                            <!-- this is for printing tags many2many field -->
                                            <t t-foreach="property.tag_ids" t-as="tag">
                                                <span t-field="tag.tag_name"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="property.grade_type_property"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="property.expected_price"/>
                                        </td>
                                        <td>
                                            <span t-field="property.deed_number"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Table 3 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="4 fw-bold">Area</th>
                                        <!-- Add other headers as needed -->
                                    </tr>


                                </thead>
                                <tbody>
                                    <!-- Table 3 body rows -->
                                    <tr class="text-end">
                                        <th>Meters</th>
                                        <th>Beswasa</th>
                                        <th>Beswa</th>
                                        <th>Gereb</th>
                                    </tr>

                                    <tr class="text-center">
                                         <td>
                                            <span t-field="property.remaining_meters"/>
                                        </td>
                                        <td>
                                            <span t-field="property.beswasa"/>
                                        </td>
                                        <td>
                                            <span t-field="property.beswa"/>
                                        </td>
                                        <td>
                                            <span t-field="property.gereb"/>
                                        </td>
                                        <!-- Add other sub-headers as needed -->
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Table 2 -->
                        <div class="table-part">
                            <table class="table">
                                <thead>
                                    <tr>   <!-- <th rowspan="2">Header 1</th>-->
                                        <th colspan="4 fw-bold">Property Boundaries</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    <!-- Table 2 body rows -->
                                    <tr class="text-end">
                                        <th>North</th>
                                        <th>South</th>
                                        <th>East</th>
                                        <th>West</th>
                                    </tr>


                                    <tr class="text-end">
                                        <td>
                                            <span t-field="property.east"/>
                                        </td>
                                        <td>
                                            <span t-field="property.south"/>
                                        </td>
                                        <td>
                                            <span t-field="property.south"/>
                                        </td>
                                        <td>
                                            <span t-field="property.south"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-6 mt-5">
                                <p class="text-center">Signature</p>
                            </div>
                            <div class="col-6  mt-5" style="margin-left:30%;">
                                <p>Prepared By:</p>
                                <hr/>
                                <span t-field="user.name"/>
                            </div>
                        </div>

                    </div>
                </br>
            </t>
        </t>
    </template>
</odoo>
