<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <data>
        <record model="ir.module.category" id="module_category_MCIT_PMS">
            <field name="name">MCIT PMS Real State Category</field>
            <field name="sequence">1</field>
            <field name="visible" eval="0"/>
        </record>

        <!-- MCIT PMS Real State Management Admin Group -->
        <record id="group_admin" model="res.groups">
            <field name="name">MCIT PMS Admin</field>
            <field name="category_id" ref="module_category_MCIT_PMS"/>
        </record>


        <!-- MCIT PMS Real State Management Manager Group -->
        <record id="group_manager" model="res.groups">
            <field name="name">MCIT PMS Manager</field>
            <field name="category_id" ref="module_category_MCIT_PMS"/>
            <!--            <field name="implied_ids" eval="[(4, ref('egp_property.group_admin'))]"/>-->
        </record>


        <!-- MCIT PMS Real State Management Admin Group -->
        <record id="group_public_user" model="res.groups">
            <field name="name">MCIT PMS Public User</field>
            <field name="category_id" ref="module_category_MCIT_PMS"/>
            <!--            <field name="implied_ids" eval="[(4, ref('egp_property.group_admin'))]"/>-->
        </record>


        <!--   Record Rule offer model for public user -->
        <record id="see_only_self_offer" model="ir.rule">
            <field name="name">Public User can only see their own offer record</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_public_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="create_partner_in_offer" model="ir.rule">
            <field name="name">Public User can create partner in offer</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_public_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>


    </data>
</odoo>