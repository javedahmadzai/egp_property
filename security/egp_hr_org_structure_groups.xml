        <field name="groups_id" eval="[(4, ref('egp_hr_org_structure.group_tashkil_karshnas'))]"/>
    </record>

    <!-- Employee main menu or employee root menu visible to HR Tashkil groups -->
    <record id="hr.menu_hr_root" model="ir.ui.menu">
        <field name="groups_id"
               eval="[(4, ref('egp_hr_org_structure.group_tashkil_ameriat')), (4, ref('egp_hr_org_structure.group_tashkil_karshnas')), (4, ref('egp_hr_org_structure.group_tashkil_Layha_Wazaif_Karmand'))]"/>
    </record>

</odoo>



