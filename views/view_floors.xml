<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Kanban view for Room MCIT -->
    <!-- Kanban view for Room MCIT -->
<record id="room_mcit_kanban_view" model="ir.ui.view">
    <field name="name">room.mcit.pms.kanban</field>
    <field name="model">room.mcit.pms</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="name"/>
            <field name="details"/>
            <field name="floor_id"/>
            <field name="product_ids"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="oe_kanban_details d-flex flex-column">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <ul>
                                <li>Room Details:
                                    <field name="details"/>
                                </li>
                                <li>Floor Name:
                                    <field name="floor_id"/>
                                </li>
                                <li>Product Name:
                                    <field name="product_ids"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- Tree view for Floor -->
    <record id="view_property_floor_tree" model="ir.ui.view">
        <field name="name">property.floor.tree</field>
        <field name="model">floor.mcit.pms</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="details"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Floor -->
    <record id="view_property_floor_form" model="ir.ui.view">
        <field name="name">property.floor.form</field>
        <field name="model">floor.mcit.pms</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="details" widget="html" type="html"/>
                        </group>
                    </group>
                    <!-- Add Rooms information related to the current floor -->
                    <notebook>
                        <page string="Related Floor Rooms">
                            <field name="room_ids">
                                <tree>
                                    <field name="name" string="Room Name"/>
                                    <field name="details"/>
                                    <field name="product_ids" widget="many2many_tags"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name" string="Room Name"/>
                                        <field name="details"/>
                                        <field name="product_ids" widget="many2many_tags"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_property_floor" model="ir.actions.act_window">
        <field name="name">Floors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">floor.mcit.pms</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your 1st Floor ðŸ¤— !!
            </p>
        </field>
    </record>

    <menuitem id="mcit_floor_menu"
              name="Floors"
              parent="menu_second"
              action="action_property_floor"
              groups="egp_property.group_admin,egp_property.group_manager"
              sequence="14"/>

</odoo>