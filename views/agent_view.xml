<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View for Agent -->
    <record id="view_agent_search" model="ir.ui.view">
        <field name="name">view.agent.search</field>
        <field name="model">agent.view</field>
        <field name="arch" type="xml">
            <search>
                <field name="agent_name"/>
                <field name="agent_mail"/>
                <field name="agent_phone"/>

                <!-- Add group filter -->
                <group expand="0" string="Group By">
                    <filter string="Experience" name="group_by_experience" context="{'group_by': 'agent_exp'}"/>
                    <filter string="Agent Type" name="group_by_agent_type" context="{'group_by': 'agent_type'}"/>
                </group>
                <!-- add a search panel  -->
                <searchpanel>
                    <field name="agent_exp" string="Experience" expand="1" select="multi" icon="fa-filter"
                           enable_counters="1"/>
                    <field name="agent_type" string="Agent Type" icon="fa-users" enable_counters="1" select="multi"/>
                </searchpanel>
            </search>

        </field>
    </record>

    <!-- Kanban View for Agent  -->
    <record model="ir.ui.view" id="view_agent_kanban">
        <field name="name">view.agent.kanban</field>
        <field name="model">agent.view</field>
        <field name="arch" type="xml">
            <kanban records_draggable="0" class="o_modules_kanban">
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click"
                             style="height:160px;background-color:#ccff99;color:#006600;border-radius:4px;">
                            <h3 style="color:red;">
                                <field name="agent_name"/>
                            </h3>
                            <div style="width:30%;float:right;display:inline-block;">
                                <img alt="avtar" t-att-src="kanban_image('agent.view','agent_pic',record.id.raw_value)"
                                     style="width:80px;height:95px;margin-top:-20px; border-radius:50px"/>
                            </div>
                            <div style="width:70%;float:left;display:inline-block;">
                                <ul style="list-style-type:none;">
                                    <li>
                                        <b>Phone No:</b>
                                        <field name="agent_phone"/>
                                    </li>
                                    <li>
                                        <b>Email:</b>
                                        <field name="agent_mail"/>
                                    </li>
                                    <li>
                                        <b>Location:</b>
                                        <field name="agent_address"/>
                                    </li>
                                    <li>
                                        <field name="agent_language_ids"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View for Agent  -->
    <record id="agent_view_form" model="ir.ui.view">
        <field name="name">agent.view.form</field>
        <field name="model">agent.view</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" readonly="1" placeholder="Agent Id"/>
                            </h1>
                        </div>
                        <group>
                            <field name="agent_pic" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="agent_name" string="Agent Name"/>
                            <field name="agent_position_title" string="Position Title"/>
                            <field name="agent_property_id" string="Involved Property Type"/>
                            <field name="agent_address"/>
                            <field name="agent_mail" placeholder="abc@gmail.com"/>
                            <field name="agent_phone" placeholder="+93"/>
<!--                            <field name="employee_id"/>-->
                        </group>
                        <group>
                            <field name="agent_type"/>
                            <field name="department_id"/>
                            <field name="agent_exp"/>
                            <field name="agent_residential"/>
                            <field name="agent_language_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                            <field name="proficient_level"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="agent_view_tree" model="ir.ui.view">
        <field name="name">agent.view.tree</field>
        <field name="model">agent.view</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" string="Agent ID"/>
                <field name="agent_name"/>
                <field name="agent_position_title"/>
                <field name="agent_mail"/>
                <field name="agent_phone"/>
                <field name="employee_id"/>
                <field name="agent_exp" optional="hide"/>
                <field name="agent_type"/>
                <field name="agent_language_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="agent_residential" optional="hide"/>
                <field name="efficiency" widget="progressbar"/>
                <field name="department_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="action_agent_commission" model="ir.actions.act_window">
        <field name="name">Agent Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agent.view</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records
            </p>
        </field>
    </record>

    <menuitem id="commission_menu"
              name="Agents"
              action="action_agent_commission"
              parent="agent_menu"
              groups="egp_property.group_admin,egp_property.group_manager"
              sequence="100"/>

</odoo>