<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Kanban view for PmsOfferGhoshai -->
    <record id="view_egp_offerGhoshai_kanban" model="ir.ui.view">
        <field name="name">egp.offerGhoshai.kanban</field>
        <field name="model">pms.offerghoshai</field>
        <!--        <field name="property_id" eval="100"/>-->
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" archivable="false" sample="1" group_by="contract_end_date">
                <field name="property_type" widget="many2many_tags"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="deed_number"/>
                <field name="offer_ghoshai_date"/>
                <field name="contract_start_date" optional="hide"/>
                <field name="contract_end_date" optional="show"/>
                <field name="note" optional="hide"/>
                <field name="day_name" optional="hide"/>
                <progressbar field="contract_status"
                             colors='{"new": "success", "draft": "warning", "running": "info", "close": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <span>
                                        <field name="property_id"/>
                                    </span>
                                </strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">
                                    <span>Deed Number :</span>
                                    <field name="deed_number"/>
                                </span>
                            </div>
                            <div>
                                <span>Contract Start Date :</span>
                                <field name="contract_end_date"/>
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="contract_status" widget="priority"/>
                                    <div class="o_kanban_inline_block">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                                <!--                                <div class="oe_kanban_bottom_right">-->
                                <!--                                    <field name="user_id" widget="many2one_avatar_user"-->
                                <!--                                           domain="[('share', '=', False)]"/>-->
                                <!--                                </div>-->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Tree view for PmsOfferGhoshai -->
    <record id="view_pms_offerghoshai_tree" model="ir.ui.view">
        <field name="name">pms.offerghoshai.tree</field>
        <field name="model">pms.offerghoshai</field>
        <field name="arch" type="xml">
            <tree string="Offer Ghoshai" sample="1">
                <field name="property_id"/>
                <field name="property_type" widget="many2many_tags"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="deed_number"/>
                <field name="living_area"/>
                <field name="bedrooms"/>
                <field name="garden" string="Garden Availability" invisible="garden == False" optional="show"/>
                <field name="garage" string="Garage Availability" invisible="garage == False" optional="show"/>
                <field name="garden_area" string="Garden Area(sqm)" invisible="garden == False" optional="hide"/>
                <field name="total_area" string="Total Area : "/>
                <field name="offer_ghoshai_date"/>
                <field name="meeting_address" optional="hide"/>
                <field name="start_hour" optional="show"/>
                <field name="end_hour" optional="hide"/>
                <field name="contract_start_date" optional="hide"/>
                <field name="contract_end_date" optional="show"/>
                <field name="note" optional="hide"/>
                <field name="day_name" optional="hide"/>
            </tree>
        </field>
    </record>


    <!-- Form view for PmsOfferGhoshai -->
    <record id="view_pms_offerghoshai_form" model="ir.ui.view">
        <field name="name">pms.offerghoshai.form</field>
        <field name="model">pms.offerghoshai</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="contract_status" widget="statusbar" nolabel="1"
                           options="{'clickable': '1'}"/>

                </header>
                <sheet>
                    <widget name="web_ribbon" title="New" bg_color="bg-success"
                            invisible="contract_status not in ('new')"/>
                    <widget name="web_ribbon" title="Contract Drafted" bg_color="bg-warning"
                            invisible="contract_status not in ('draft')"/>
                    <widget name="web_ribbon" title="Contract Running" bg_color="bg-info"
                            invisible="contract_status not in ('running')"/>
                    <widget name="web_ribbon" title="Contract Closed" bg_color="bg-danger"
                            invisible="contract_status not in ('close')"/>
                    <group name="main">

                        <group>
                            <field name="property_id"/>
                            <field name="property_type" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="deed_number"/>
                            <field name="living_area" optional="hide"/>
                            <field name="bedrooms" optional="hide"/>
                            <field name="garden" string="Garden Availability" invisible="garden == False"
                                   optional="hide"/>
                            <field name="garage" string="Garage Availability" invisible="garage == False"
                                   optional="hide"/>
                            <field name="garden_area" string="Garden Area(sqm)" invisible="garden == False"
                                   optional="hide"/>
                            <field name="total_area" string="Total Area : "/>
                            <field name="offer_ghoshai_date"/>
                        </group>

                        <group>
                            <field name="meeting_address"/>
                            <field name="start_hour"/>
                            <field name="end_hour"/>
                            <field name="contract_start_date"/>
                            <field name="contract_end_date"/>
                            <field name="day_name"/>
                            <field name="agent_team_id"/>
                            <field name="monthly_rent"/>
                            <field name="winner_id"/>
                            <field name="note"/>
                        </group>

                        <notebook>

                            <page string="Offer" invisible="contract_status == 'running'"
                                  groups="egp_property.group_admin,egp_property.group_manager">
                                <field name="offer_id">
                                    <tree editable="bottom" decoration-success="status=='accepted'"
                                          decoration-danger="status == 'refused'">
                                        <field name="property_id" options="{'no_create_edit':True,'no_create':True}"/>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity" string="Validity(Days)"/>
                                        <field name="deadline" string="Deadline"/>
                                        <button name="action_accept" type="object" class="fa fa-check btn-success"
                                                invisible="status == 'accepted'"/>
                                        <button name="action_refused" type="object" class="fa fa-times btn-danger"
                                                invisible="status == 'refused'"/>
                                        <field name="status" string="Status"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Notebook for Tenant Payment -->
                            <page string="Tenant Payment" groups="egp_property.group_admin,egp_property.group_manager">
                                <form>
                                    <field name="tenant_ids" style="font-weight:bold;">
                                        <tree editable="top" decoration-success="is_paid == True"
                                              decoration-danger="is_paid == False"
                                              decoration-bf="is_paid == False">
                                            <field name="tenant_id"/>
                                            <field name="tenant_phone_number"/>
                                            <field name="property_id"/>
                                            <field name="account_number"/>
                                            <field name="OwaisBank"/>
                                            <field name="payment_date"/>
                                            <field name="monthly_rent" string="Monthly Rent"/>
                                            <field name="amount"/>
                                            <field name="months"/>
                                            <field name="total_rent_received" sum="total_rent_received"
                                                   string="Total Received Amount" style="font-weight: bold; color:red"/>
                                            <field name="months_paid" string="Months Paid"/>
                                            <field name="remaining_amount" string="Days Paid"/>
                                            <field name="is_paid"/>
                                            <field name="description"/>
                                            <field name="tenant_attachments" widget="many2many_binary"/>
                                        </tree>
                                    </field>
                                </form>
                            </page>

                        </notebook>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for PmsOfferGhoshai -->
    <record id="action_pms_offerghoshai" model="ir.actions.act_window">
        <field name="name">Offer Ghoshai</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pms.offerghoshai</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <!--            <field name="view_id" ref="view_pmis_offerghoshai_tree"/>-->
        <!--            <field name="search_view_id" ref="my_pmis.view_pmis_offerghoshai_search"/>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your New Contract !!
            </p>
        </field>
    </record>

    <!-- Menu item for PmsOfferGhoshai -->
    <menuitem
            id="menu_pms_offerghoshai"
            name="Contract"
            parent="menu_root"
            action="action_pms_offerghoshai"
            sequence="20"/>

</odoo>
